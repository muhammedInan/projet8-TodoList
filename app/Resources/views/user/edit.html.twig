{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="row">
            {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Modifier</button>
            {{ form_end(form) }}
        </div>
    {% else %}
        <div class="row">
            <p>Vous n'avez pas les permissions pour modifier un utilisateur.</p>
            <a href="{{ path('homepage') }}" class="btn btn-primary">Retour Ã  l'accueil</a>
        </div>
    {% endif %}
{% endblock %}